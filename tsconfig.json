{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src/**/*", "examples/**/*", "ymlx.d.ts"],
  "exclude": ["node_modules", "dist", "docs", "bin", "examples/**/out/**"],
  "files": ["ymlx.d.ts"]
}
